@model DevelopmentProject.Models.Calculator.CalculatorViewModel

@{
    ViewData["Title"] = "Calculator Page 1";
}

<h5>Calculator Page 1</h5>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Calculator" asp-action="Page2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="CalculatorPage1.Id" />*@
            <div class="form-group">
                <label asp-for="CalculatorPage1.Name" class="control-label"></label>
                <input asp-for="CalculatorPage1.Name" class="form-control" />
                <span asp-validation-for="CalculatorPage1.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalculatorPage1.Age" class="control-label"></label>
                @*<input asp-for="CalculatorPage1.Age" class="form-control" />*@
                @Html.TextBoxFor(m => m.CalculatorPage1.Age, "", new { maxlength = 3, @class = "form-control" })
                <span asp-validation-for="CalculatorPage1.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalculatorPage1.DateOfBirth" class="control-label"></label>
                <input asp-for="CalculatorPage1.DateOfBirth" class="form-control" />
                <span asp-validation-for="CalculatorPage1.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(model => ViewData["CalculatorViewModel"])
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>

            @Html.HiddenFor(model => model.CalculatorPage1.Occupation)
            @Html.HiddenFor(model => model.CalculatorPage1.SumInsured)
            @Html.HiddenFor(model => model.CalculatorPage1.MonthlyExpensesTotal)
            @Html.HiddenFor(model => model.CalculatorPage1.State)
            @Html.HiddenFor(model => model.CalculatorPage1.Postcode)
            @Html.HiddenFor(model => model.CalculatorPage1.TotalValue)
        </form>
    </div>
</div>


